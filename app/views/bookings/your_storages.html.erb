<div class="row">
	<div class="col-md-3">
		<ul class="sidebar-list">
			<li class="sidebar-item"><%= link_to "Your Listing", spaces_path, class: "sidebar-link" %></li>
			<li class="sidebar-item"><%= link_to "Your Bookings", your_bookings_path, class: "sidebar-link" %></li>
			<li class="sidebar-item"><%= link_to "Your Storages", your_storages_path, class: "sidebar-link active" %></li>
		</ul>
	</div>
	<div class="col-md-9">
		<div class="panel panel-default">
			<div class="panel-heading">
				Your Storages
			</div>
			<div class="panel-body">

				<% @storages.each do |storage| %>
					<div class = "row">
						<div class="col-md-2">
							<%= storage.start_date.strftime('%v') %>
						</div>
						<div class="col-md-2">
							<%= storage.end_date.strftime('%v') %>
						</div>
						<div class="col-md-4">
							<%= link_to space_path(storage.space) do %>
								<%= image_tag storage.space.show_first_photo(:thumb) %>
							<% end %>
						</div>
						<div class="col-md-2">
							<%= link_to user_path(storage.space.user) do %>
								<%= image_tag gravatar_url(storage.space.user), class: "img-circle gravatar-medium" %>
							<% end %>
						</div>
						<div class="col-md-2 right">
							<h4>$<%= storage.tot_price %></h4>
						</div>
					</div>
				<% end %>

			</div>
		</div>
	</div>

</div>