<div class="row">
	<div class="col-md-3">
		<ul class="sidebar-list">
			<li class="sidebar-item"><%= link_to "Your Listing", spaces_path, class: "sidebar-link" %></li>
			<li class="sidebar-item"><%= link_to "Your Bookings", your_bookings_path, class: "sidebar-link active" %></li>
			<li class="sidebar-item"><%= link_to "Your Storages", your_storages_path, class: "sidebar-link" %></li>
		</ul>
	</div>
	<div class="col-md-9">
		<div class="panel panel-default">
			<div class="panel-heading">
				Your Bookings
			</div>
			<div class="panel-body">
				<% @spaces.each do |space| %>
					<% space.bookings.each do |booking| %>
						<div class = "row">
							<div class="col-md-2">
								<%= booking.start_date.strftime('%v') %>
							</div>
							<div class="col-md-2">
								<%= booking.end_date.strftime('%v') %>
							</div>
							<div class="col-md-4">
								<%= link_to space_path(booking.space) do %>
									<%= image_tag booking.space.show_first_photo(:thumb) %>
								<% end %>
							</div>
							<div class="col-md-2">
								<%= link_to user_path(booking.user) do %>
									<%= image_tag gravatar_url(booking.user), class: "img-circle gravatar-medium" %>
								<% end %>
							</div>
							<div class="col-md-2 right">
								<h4>$<%= booking.tot_price %></h4>
							</div>
						</div>
					<% end %>
				<% end %>

			</div>
		</div>
	</div>

</div>