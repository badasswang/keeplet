<div class="panel">
	<div class="panel-body">
		<%= image_tag gravatar_url(message.user), class: "img-circle gravatar-small" %>
		<strong><%= message.user.firstname %></strong>

		<span class="pull-right"><%= message.message_time %></span>
		<br>
		<div class="row-space-2">
			<%= message.content %>
		</div>
	</div>
</div>